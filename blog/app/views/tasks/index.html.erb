<p id="notice"><%= notice %></p>
<%= link_to "test js", '$(this).html("js works")' %>
<%= form_for(Task.new) do |f| %>
  <div class="field">
    <%= f.label :name, "New Task:" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
<% end %>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
